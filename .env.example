# üåê Spring Datasource Configuration
# MySQL connection URL pointing to local database server
# Example assumes MySQL is running on localhost and default port 3306
SPRING_DATASOURCE_URL=jdbc:mysql://host.docker.internal:3306/student_progress?useSSL=false

# Database username
SPRING_DATASOURCE_USERNAME=change-me

# Database password
SPRING_DATASOURCE_PASSWORD=change-me

# üåç CORS Configuration
# Comma separated list of allowed origins to access the API
CORS_ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3000